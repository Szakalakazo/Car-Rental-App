<aura:component
        implements="flexipage:availableForAllPageTypes,force:hasRecordId"
        controller="TCR_PriceBookProducts">

    <aura:attribute name="recordId" type="String"/>
    <aura:attribute name="recordList" type="Pricebook2[]"/>
    <aura:attribute name="currentOrderItem" type="String"/>

    <aura:registerEvent name="TCR_ShowPriceBookDetails" type="c:TCR_ShowPriceBookDetails"/>

    <aura:handler name="init" value="{!this}" action="{!c.init}"/>
    <aura:handler event="c:TCR_DeletePriceBookEvent" action="{!c.init}"/>
    <aura:handler event="c:TCR_AddNewPriceBookEvent" action="{!c.init}"/>

    <lightning:card title="{!$Label.c.TCR_Available_Price_Books}">
        <table class="slds-table slds-table_bordered slds-table_cell-buffer slds-table_fixed-layout">
            <thead>
            <tr class="slds-text-heading_label">
                <th class="col1"  scope="col">
                    <div class="slds-truncate" title="{!$Label.c.TCR_Name}">{!$Label.c.TCR_Name}</div>
                </th>
                <th class="col1" scope="col">
                    <div class="slds-truncate"
                         title="{!$Label.c.TCR_Is_Active}">{!$Label.c.TCR_Is_Active}
                    </div>
                </th>
                <th class="col1" scope="col">
                    <div class="slds-truncate"
                         title="{!$Label.c.TCR_Start_Day}">{!$Label.c.TCR_Start_Day}
                    </div>
                </th>
                <th class="col1" scope="col">
                    <div class="slds-truncate"
                         title="{!$Label.c.TCR_End_Date}">{!$Label.c.TCR_End_Date}
                    </div>
                </th>
                <th class="col1" scope="col">
                    <div class="slds-truncate" title=""></div>
                </th>
            </tr>
            </thead>
            <tbody>
            <aura:iteration items="{!v.recordList}"
                            var="item"
                            indexVar="ind">
                <tr class="slds-hint-parent"
                    onclick="{!c.handleOpenModal}"
                    data-id="{!item.Id}"
                    id="{!item.Id}"
                    onmouseover="{!c.setCurrentPriceBookItemId}"
                style="cursor: pointer">
                    <td class="centerColumn">
                            {!item.Name}
                    </td>
                    <td class="centerColumn">
                            {!item.IsActive}
                    </td>
                    <td class="centerColumn">
                            {!item.Start_Date__c}
                    </td>
                    <td class="centerColumn">
                            {!item.Start_Date__c}
                    </td>
                    <td class="centerColumn">
                        <lightning:buttonIcon iconName="utility:delete"
                                              alternativeText="delete"
                                              onclick="{!c.clickDeleteProduct}"
                                              size="medium"/>
                    </td>
                </tr>
            </aura:iteration>
            </tbody>
        </table>
    </lightning:card>
    <c:TCR_PriceBookToast aura:id="toast"/>
    <c:TCR_ProductManagerSpinner aura:id="spinner"/>
</aura:component>
